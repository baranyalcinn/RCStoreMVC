@using RCStoreMVC.Models
@model Login

@{
    ViewBag.Title = "title";
}


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container py-3 h-100">
            <div class="row justify-content-center align-items-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="card bg-dark text-white" style="border-radius: 1rem; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">
                        <div class="card-body p-4 text-center">

                            <div class="mb-md-5 mt-md-4 pb-4 d-flex flex-column align-items-center">
                                <h2 class="fw-bold mb-3 text-uppercase" style="font-size: 2.5rem;">Giriş</h2>
                                <p class="text-white-50 mb-4" style="font-size: 1.1rem;">Lütfen kullanıcı adı ve şifrenizi girin!</p>

                                <div class="form-white mb-3" style="max-width: 250px;">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-white mb-4" style="max-width: 250px;">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>

                                <p class="small mb-4 pb-lg-2"><a class="text-white-50" href="#!" style="text-decoration: none;">Şifrenizi mi unuttunuz?</a></p>

                                <input type="submit" value="Giriş" class="btn btn-light btn-lg px-5" style="border-radius: 2rem;">
                            </div>

                            <div>
                                <p class="mb-0" style="font-size: 0.9rem;">
                                    Hesabınız yok mu? <a href="/Account/Register" class="text-white-50 fw-bold" style="text-decoration: none;">Kaydol</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }




<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
