@model RCStoreMVC.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>
    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>


<div class="container pb-5" data-bs-theme="dark">

    <div class="d-flex justify-content-center">

        <div class="col-md-11">
            <h2>Sipariş</h2>
            <p class="text-secondary-emphasis">Lütfen sipariş bilgilerinizi ekleyiniz.</p>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">

                                <label class="mb-1 mt-3">
                                    Ad Soyad
                                </label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    Adres Başlığı
                                </label>
                                @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    Adres
                                </label>
                                @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    Şehir
                                </label>
                                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    Semt
                                </label>
                                @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    Mahalle
                                </label>
                                @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                            </div>
                        </div>

                        <div>
                            <div class="form-group">
                                <label class="mb-1 mt-3">
                                    <button type="submit" class="btn btn-secondary">Kaydet</button>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>





<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

