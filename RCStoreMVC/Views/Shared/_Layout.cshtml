<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RC STORE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/theme/css/style.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <style>
        /* Genel stiller */
        .navbar {
            background-color: #333;
            color: #fff;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

            .navbar-nav .nav-link:hover {
                color: #d9cece;
            }

        .navbar .btn-outline-light {
            color: #fff;
            border-color: #fff;
        }

            .navbar .btn-outline-light:hover {
                color: #333;
                background-color: #fff;
            }

        .giris-btn {
            background-color: #343a40;
            color: #fff;
            border: 2px solid #343a40;
        }

        .kayit-btn {
            border: 2px solid;
        }

        .custom-navbar {
            height: 60px;
            padding: 10px 15px;
            font-size: 16px;
        }

        .product-left,
        .product-right {
            margin-bottom: var(--spacer-12);
        }

        .product-image #product-primary-image {
            position: relative;
            aspect-ratio: 1;
            margin-bottom: var(--spacer-4);
        }

            .product-image #product-primary-image img {
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                display: block;
                max-width: 100%;
                max-height: 100%;
            }


    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark custom-navbar">
        <div class="container-md">
            <a class="navbar-brand" href="/Home">
                <img src="~/theme/img/rclogo.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Store
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto my-2 lg-0">
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" style="color: lightsteelblue" aria-current="page" href="/Product"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Admin</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/List">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">Hakkımızda</a>
                    </li>
                </ul>

                @Html.Action("Summary", "Cart")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <section>
        <div class="container" style="margin-top: 20px">
            @RenderBody()
        </div>
    </section>

    <section>
        <div class="footer-top-image" style="max-width: 100%; overflow: hidden; margin-top: 150px">
            <img src="//ideacdn.net/idea/fo/47/themes/selftpl_645048ed3bcdc/assets/uploads/footer_top_image.png?revision=7.2.7.2-1-1699884565" style="width: 100%; height: auto;">
        </div>
    </section>
    <script src="~/theme/js/holder.min.js"></script>
    <script src="/bootstrap.min.js"></script>
</body>
</html>
