<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RC STORE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/theme/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <style>
        .navbar {
            background-color: #333; /* Arka plan rengi */
            color: #fff; /* Yazı tipi rengi */
        }

        /* Navbar içindeki linklerin rengi */
        .navbar-nav .nav-link {
            color: #fff; /* Link rengi */
        }

            /* Navbar içindeki linklerin hover (üzerine gelindiğinde) rengi */
            .navbar-nav .nav-link:hover {
                color: #d9cece; /* Hover rengi */
            }

        /* Navbar içindeki düğmenin rengi */
        .navbar .btn-outline-light {
            color: #fff; /* Düğme yazı rengi */
            border-color: #fff; /* Düğme kenarlık rengi */
        }

            /* Navbar içindeki düğmenin hover (üzerine gelindiğinde) rengi */
            .navbar .btn-outline-light:hover {
                color: #333; /* Hover rengi */
                background-color: #fff; /* Hover arka plan rengi */
            }
    </style>

</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-md">
            <a class="navbar-brand" href="/Home">
                <img src="~/theme/img/rclogo.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Admin
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0" style="margin-right:10px">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Product">Ürün</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Category">Kategori</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Order/Index">Sipariş</a>
                    </li>
                </ul>
               
            </div>
        </div>
    </nav>






    <div class="container" style="margin-top: 20px;">
        @RenderBody()
    </div>



    <script src="~/theme/js/holder.min.js" type="text/javascript"></script>
    <link href="bootstrap.min.css" rel="stylesheet">
    <script src="bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.1.0/css/fontawesome.min.css" rel="stylesheet">

   

</body>


</html>