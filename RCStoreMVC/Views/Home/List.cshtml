@using RCStoreMVC.Models
@model IEnumerable<ProductModel>

<div class="container">
    <div class="row">
        <div class="col-md-2 fs small">
            @Html.Action("GetCategories", "Home")
        </div>

        <div class="col-md-10">
            @if (Model.Count() > 0)
            {
                <div class="alert alert-dark" role="alert">
                    <strong>@Model.Count()</strong> adet ürün bulundu.
                </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
